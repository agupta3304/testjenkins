pipeline {
    agent any

    environment {
        DOCKER_IMAGE = "your-dockerhub-username/your-flask-app"
        DOCKER_TAG = "latest"
    }

    stages {
        

        stage('Build Docker Image') {
            steps {
                script {
                    sh 'docker build -t $DOCKER_IMAGE:$DOCKER_TAG .'
                }
            }
        }

        stage('Run Tests') {
            steps {
                script {
                    // Run pytest inside container
                    sh 'docker run --rm $DOCKER_IMAGE:$DOCKER_TAG pytest --maxfail=1 --disable-warnings -q --junitxml=report.xml'
                }
            }
            post {
                always {
                    junit 'report.xml'
                }
            }
        }

        
}
}
