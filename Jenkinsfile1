pipeline {
    agent any

    environment {
        DOCKER_IMAGE = "your-dockerhub-username/your-flask-app"
        DOCKER_TAG = "latest"
    }

    stages {
        stage('Checkout') {
            steps {
                git branch: 'main', url: 'https://github.com/your-repo/your-flask-app.git'
            }
        }

        stage('Build Docker Image') {
            steps {
                script {
                    sh 'docker build -t $DOCKER_IMAGE:$DOCKER_TAG .'
                }
            }
        }

        stage('Run Tests') {
            steps {
                script {
                    // Run pytest inside container
                    sh 'docker run --rm $DOCKER_IMAGE:$DOCKER_TAG pytest --maxfail=1 --disable-warnings -q --junitxml=report.xml'
                }
            }
            post {
                always {
                    junit 'report.xml'
                }
            }
        }

        stage('Push to Docker Hub') {
            when {
                expression {
                    // Push only if tests passed
                    currentBuild.resultIsBetterOrEqualTo('SUCCESS')
                }
            }
